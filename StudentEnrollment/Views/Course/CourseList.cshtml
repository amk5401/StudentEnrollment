@model StudentEnrollment.Models.Course[]
<h2>@ViewData["Title"]</h2>
<table class="table myTable" style="cursor:pointer">
    <thead>
        <tr>
            <th>Course Code</th>
            <th>Name</th>
            <th>Credits</th>
            <th>Minimum GPA</th>
            <th>Prerequisites</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in @Model)
    {
        <tr id="@item.ID">
            <td>@item.CourseCode</td>
            <td>@item.Name</td>
            <td>@item.Credits</td>
            <td>@item.MinGPA</td>
            <td>@item.Availability</td>
        </tr>

    }
    </tbody>
</table>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("table tr").click(function (e) {
            window.location.href = "/Section/SectionList?courseID=" + $(this).attr("id");
        });
    });
</script>