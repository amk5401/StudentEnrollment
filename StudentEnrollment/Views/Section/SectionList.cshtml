@model StudentEnrollment.Models.Section[]
@*@{
    var sections = ViewData["Sections"] as List<StudentEnrollment.Models.Section>;
    var course = ViewData["Course"] as StudentEnrollment.Models.Course;
}*@
<h3>@ViewData["Title"]</h3>
@*<p>All sections for course with Id:@course.ID</p>*@
@if (@Model[0] != null)
{
    <table class="table myTable" style="cursor:pointer">
        <thead>
            <tr>
                <th>Term</th>
                <th>Instructor</th>
                <th>Course</th>
                <th>Location</th>
                <th>Max Students</th>
                <th>Availability</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                <tr id="@item.ID">
                    <td>@item.TermID</td>
                    <td>@item.InstructorID</td>
                    <td>@item.CourseID</td>
                    <td>@item.LocationID</td>
                    <td>@item.MaxStudents</td>
                    <td>@item.Availability</td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are currently no sections for this course.</p>
}
<script type="text/javascript">
    $(function () {
        $("table tr").click(function (e) {
            window.location.href = "/Section/Detail?sectionID=" + $(this).attr("id");
        });
    });
</script>