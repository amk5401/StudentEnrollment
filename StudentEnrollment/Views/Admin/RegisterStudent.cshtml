@model StudentEnrollment.Models.Student

@{
    ViewBag.Title = "RegisterStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>RegisterStudent</h2>

<form action="/Admin/RegisterStudentSubmit" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            Username: <input type="text" name="username" required> <br>
            Password: <input type="password" name="password" required> <br>
            First Name: <input type="text" name="fname" required> <br>
            Last Name: <input type="text" name="lname" required> <br>
            Email: <input type="email" name="email" required> <br>
            Year Level: <input type="text" name="yearLevel" required> <br>
            GPA: <input type="text" name="gpa" required> <br>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register Student" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


