@model StudentEnrollment.Models.Term

@{
    ViewBag.Title = "CreateCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateCourse</h2>


    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Course</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form action="@Url.Action("CreateCourseSubmit", "Admin")" method="post">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label for="courseCode">Course Code</label>
                    <input type="text" value="" />
                </div>
            </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <label for="Name">Name</label>
                        <input type="text" value="" />
                    </div>
                </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label for="credits">Credits</label>
                    <input type="number" value="" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label for="minGPA">Minimum GPA</label>
                    <input type="number" value="" />
                </div>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="submit" value="Submit" class="btn btn-default" />
            </div>
                    
        </form>    
    </div>


<div>
    @Html.ActionLink("Cancel Creation - Return Home", "Index")
</div>
