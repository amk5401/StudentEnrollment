        </div>
            
    </div>


<div>
    @Html.ActionLink("Cancel Creation - Return Home", "Index")
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#createBook').modal('hide');
        $('.create-book').click(function () {
            var url = "/Admin/CreateBook"; // the url to the controller
            $.get(url, function (data) {           
                $('#create-book-container').html(data);
                //$('#create-book').modal('show');
                $('#createBook').modal('show');
            });
        });
     });
</script>
